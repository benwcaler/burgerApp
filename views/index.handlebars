<h1>Burgers!</h1>

<h2>Devour a burger</h2>

<ul>
  {{#each burgers}} 
    {{#unless devoured }} 
      {{> burgerBlock }}
    {{/unless}} 
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger to the Menu</h2>
<form class="form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="b" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>